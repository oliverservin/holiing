{
    email oliver@radiocubito.com
    on_demand_tls {
        ask https://holiing.com/caddy/allowed-domain
    }
}

:{$PORT} {
    tls {
        on_demand
    }

    handle {
        # Add headers any proxy would expect
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Port {server_port}
        header_up X-Forwarded-Proto {scheme}

        rewrite * /links/{labels.1}.{labels.0}
        reverse_proxy http://holiing.com
    }
}
