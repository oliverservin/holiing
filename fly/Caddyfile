:{$PORT} {
    reverse_proxy http://holiing.com {
        # We use Laravel's subdomain routing to match
        # this domain to the right custom domain page
        header_up Host {host}.links.holiing.com

        # Confirm the request came from our Caddy proxy
        header_up User-Custom-Domain {host}

        # Add headers any proxy would expect
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Port {server_port}
        header_up X-Forwarded-Proto {scheme}

        # We should never take more than 5s to load
        health_timeout 5s
    }
}
